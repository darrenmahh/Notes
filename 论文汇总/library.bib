@article{jiaPredictionWetlandSoil2024,
  title = {Prediction of Wetland Soil Carbon Storage Based on near Infrared Hyperspectral Imaging and Deep Learning},
  author = {Jia, Liangquan and Yang, Fu and Chen, Yi and Peng, Liqiong and Leng, Huanan and Zu, Weiwei and Zang, Ying and Gao, Lu and Zhao, Mingxing},
  year = {2024},
