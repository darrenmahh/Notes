@article{dumanPartitioningNetEcosystem2018,
  title = {Partitioning Net Ecosystem Carbon Exchange of Native and Invasive Plant Communities by Vegetation Cover in an Urban Tidal Wetland in the New Jersey Meadowlands ({{USA}})},
  author = {Duman, T. and Sch{\"a}fer, K.V.R.},
  year = {2018},
